<?xml version="1.0" encoding="UTF-8"?>

<!-- Minimalkonfiguration fÃ¼r Tests -->
<configuration>

    <contextName>Test</contextName>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{HH:mm:ss.SSS} [%10.10thread] %.-1level %.-30(%-30logger{0}) %message%n</pattern>
        </encoder>
    </appender>

    <appender name="plain_console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%message%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate SQL Parameter Logging, wird mit Level ALL aktiviert -->
    <logger name="org.hibernate.type" level="INFO" additivity="false">
        <appender-ref ref="plain_console"/>
    </logger>

    <!-- Hibernate SQL Parameter Logging, wird mit Level DEBUG aktiviert -->
    <logger name="org.hibernate.SQL" level="INFO" additivity="false">
        <appender-ref ref="plain_console"/>
    </logger>


    <root level="INFO">
        <appender-ref ref="console"/>
    </root>

</configuration>
